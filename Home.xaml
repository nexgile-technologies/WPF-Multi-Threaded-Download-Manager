<Window x:Class="IDM.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IDM"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800">
    <Grid>
        <Button Content="URL" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="76" Click="Url_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="155,10,0,0" VerticalAlignment="Top" Width="76"/>
        <Button Content="Setting" HorizontalAlignment="Left" Margin="74,10,0,0" VerticalAlignment="Top" Width="76" Click="Setting_Click"/>
        <ListView x:Name="File_List" HorizontalAlignment="Left" Height="384" Margin="0,35,0,0" VerticalAlignment="Top" Width="792" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="#" Width="60"/>
                    <GridViewColumn Header="URL" Width="350"/>
                    <GridViewColumn Header="File Name" Width="60" />
                    <GridViewColumn Header="Size" Width="60" />
                    <GridViewColumn Header="DateTime" Width="60" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
